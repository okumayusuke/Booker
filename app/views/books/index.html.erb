<% if flash[:successfull] %>
  <div class="flash">
    <%= flash[:successfull] %>
  </div>
<% end %>
<h1>Books</h1>
<main>
  <table border="1">
    <% @books.each do |book| %>
      <tr>
        <th>title</th>
        <th>body</th>
        <th>action</th>
      </tr>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book) %>
            <%= link_to "edit", edit_book_path(book) %>
            <%= link_to "destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
  </table>
  <div class="new">
    <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <% if @book.errors.any? %>
        <h4>2 errors prohibited this book from being saved:</h4>
          <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        <% end %>
      <h4>title</h4>
      <%= f.text_field :title %>

      <h4>body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</main>


