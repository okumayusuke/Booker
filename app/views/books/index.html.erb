<h1>Books</h1>
<main>
  <div class="table">
    <% @books.each do |book| %>
    <h4>title</h4>
    <%= book.title %>
    <h4>body</h4>
    <%= book.body %>
    <%= link_to "show", book_path(book) %>
    <%= link_to "edit", edit_book_path(book) %>
    <%= link_to "destroy", book_path(book), method: :delete %>
    <% end %>
  </div>
  <div class="new">
    <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>

      <h4>title</h4>
      <%= f.text_field :title %>

      <h4>body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Createbook' %>
    <% end %>
  </div>
</main>


